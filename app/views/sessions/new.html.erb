<h2><%= t('sessions.new.title') %></h2>
<br />

<div class="row">
  <div class="span5">

    <%= form_tag(sessions_path, class: "form-horizontal") do %>
      <div class="control-group">
        <%= label_tag(:email, User.human_attribute_name(:email), class: "control-label") %>
        <p class="controls"><%= text_field_tag :email, nil, class: "input-xlarge" %></p>
      </div>

      <div class="control-group">
        <%= label_tag(:password, User.human_attribute_name(:password), class: "control-label") %>
        <p class="controls"><%= password_field_tag :password, nil, class: "input-xlarge" %></p>
      </div>

      <div class="center">
        <%= submit_tag t('general.buttons.access'), class: "btn btn-primary btn-large" %>
        <%= link_to t('general.buttons.back'), root_path, class: "btn btn-inverse btn-large" %>
      </div>
    <% end %>

  </div>

  <div class="span3 center hero-unit">
    <h4><%= t('sessions.new.social_auth_title') %></h4>
    <a id="twitter"  href="/auth/twitter"><%= image_tag "twitter.png" %></a>
    <a id="github"   href="/auth/github"><%= image_tag "github.png" %></a>
    <a id="facebook" href="/auth/facebook"><%= image_tag "facebook.png" %></a>
  </div>
</div>
